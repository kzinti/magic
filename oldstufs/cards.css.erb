body                { background-color: white; color: black; }
th                  { text-align: left }
td                  { text-align: left }
div.title           { border: 2px solid; margin-top: 5px;
                      margin-left: 5px; margin-right: 5px;
                      border-radius: 5px; background-color: tan }
div.att_title       { border: 2px solid; margin-left: 5px;
                      margin-right: 5px; border-radius: 5px;
                      background-color: tan }
div.card_body       { border: 2px solid; margin-left: 5px;
                      margin-right: 5px; border-radius: 2px;
                      background-color: white; margin-top: 3px;
                      font-size: small; padding: 5px; height: 20px }
div.card_art        { text-align: center; margin-left: 5px;
                      margin-right: 5px }
div.pow_tough       { position: relative; margin-left: 5px;
                      margin-right: 5px; border: 2px solid;
                      border-radius: 2px; left: 210px; top: 374px;
                      background-color: tan; width: 35px; height: 15px;
                      text-align: center }
